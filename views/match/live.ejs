<h2>Soccer Match: <span class="match-group"></span></h2>
<div class="col-md-6 text-right">
	<h3 class="team-a-name">Team A</h3>
	<div class="col-md-12">
		<div class="btn btn-success btn-lg btn-team-a-add" style="font-size: 400%;">0</div>
	</div>
	<div class="col-md-12">
		<div class="btn-group">
			<button type="button" class="btn btn-default btn-team-a-sub">-</button>
			<button type="button" class="btn btn-default btn-team-a-add">+</button>
		</div>
	</div>
</div>
<div class="col-md-6">
	<h3 class="team-a-name">Team B</h3>
	<div class="col-md-12">
		<div class="btn btn-success btn-lg btn-team-b-add" style="font-size: 400%;">0</div>
	</div>
	<div class="col-md-12">
		<div class="btn-group">
			<button type="button" class="btn btn-default btn-team-b-sub">-</button>
			<button type="button" class="btn btn-default btn-team-b-add">+</button>
		</div>
	</div>
</div>

<script type="text/javascript">

$(document).ready(function(){

	var Match = new App.Models.Match();
	Match.id = <%=matchId%>;

	Match.on('change:teamA', function(){
		var team = Match.get('teamA');
		$('.team-a-name').text(team.name);
	});

	Match.on('change:teamB', function(){
		var team = Match.get('teamB');
		$('.team-b-name').text(team.name);
	});

	Match.fetch();

});


</script>